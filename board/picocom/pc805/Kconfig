if TARGET_PICOCOM_PC805

config SYS_CPU
	default "pc805"

config SYS_BOARD
	default "pc805"

config SYS_VENDOR
	default "picocom"

config SYS_SOC
	default "pc805_r0"

config SYS_CONFIG_NAME
	default "pc805"

config ENV_SIZE
	default 0x2000 if ENV_IS_IN_SPI_FLASH

config ENV_OFFSET
	default 0x140000 if ENV_IS_IN_SPI_FLASH

config SPL_TEXT_BASE
	default 0x10104000
	#default 0x10300000

config SPL_OPENSBI_LOAD_ADDR
	default 0x80000000

config BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select RISCV_PICOCOM
	select SUPPORT_SPL
	imply SPL_RAM_SUPPORT
	imply SPL_RAM_DEVICE

config SPL_LPDDR4_ISSI_ECC_ERR_ON
    bool "LPDDR4 ISSI on-chip ecc and error indication enable"
    depends on SPL
    default n

config SPL_LPDDR4_INLINE_ECC_ENABLE
    bool "LPDDR4 enable inline ecc"
    depends on SPL
    default n

config SPL_LPDDR4_TOTAL_SIZE
    int "LPDDR4 size for mega bytes"
    depends on SPL
    default 512

endif
